{% extends "base.html.twig" %}

{% block title %}
    Les r√©alisations {{ parent() }}
{% endblock %}

{% block main %}
    <main id="content" class="realPage">

    {% for realisation in realisations %}
        <section class ="realSection">

            <div class="sliderNBtn {% if loop.index is even %}animate__slideInLeft{% else %}animate__slideInRight{% endif %}">
                <button class = "prevButtonReal">
                    <img src="assets/img/flecheSliderGauche.png" alt="flecheSliderGauche">
                </button>

                {% for picture in realisation.pictures %}
                    <img class = "realSliderImg " src="{{ picture.url }}" alt="{{ picture.alt }}">
                {% endfor %}

                <button class = "nextButtonReal" >
                    <img src="assets/img/flecheSliderDroite.png" alt="flecheSliderDroite">
                </button>
            </div>

            <div class="text-content {% if loop.index is even %}animate__slideInRight{% else %}animate__slideInLeft{% endif %}">
                <h3>{{ realisation.title }}</h3><br>
                <p>{{ realisation.description }}</p>
            </div>

        </section>
    {% endfor %}

    </main>
{% endblock %}