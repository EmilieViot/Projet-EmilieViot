{% extends "base.html.twig" %}

{% block title %}
    Consulter/laisser un avis
    {{ parent() }}
{% endblock %}

{% block main %}

<main id="pricingPage">
    {% if session['error-message'] is defined %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ session['error-message'] }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    <form class = "pricingForm" action="index.php?route=pricingRegister" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend class="dark-mode white-text"> Ciblons ensemble vos besoins </legend>
            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ sessionToken }}" />

            {%  if  message is defined %}
                <p class="pricingFormOKMessage">{{ message }}</p>
            {% endif %}

            <label for="contact_mode">Comment souhaitez-vous être recontacté(e) ?</label>
            <select id="contact_mode" name="contact_mode" required="required">
                <option value=""></option>
                <option value="telephone">Téléphone</option>
                <option value="email">Email</option>
            </select>

            <label for="firstname">Prénom</label>
            <input type="text" id="firstname" name="firstname" required="required">

            <label for="lastname">Nom</label>
            <input type="text" id="lastname" name="lastname" required="required">

            <label for="email">Email</label>
            <input type="email" id="email" name="email" required="required">

            <label for="tel">Téléphone</label>
            <input type="tel" id="tel" name="tel" required="required">

            <label for="city">Ville</label>
            <input type="text" id="city" name="city">


            <div class="formDetails">
                {% for detail in details %}
                <fieldset >
                    <label for="detail{{ detail.id }}">{{ detail.title }}</label>
                    <input type="checkbox" id="detail{{ detail.id }}" name="details[]" value="{{ detail.title }}"/>
                </fieldset>
                {%  endfor %}
            </div>

            <label for="message">Message (max 1024 caractères)</label>
            <textarea id="message" name="message" maxlength="1024"></textarea>

            <label for="picture">Télécharger un document (5Mo maximum) :</label>
            <input type="file" name="picture" id="picture" accept="photo/*">

            <button type="submit" >Envoyer</button>
        </fieldset>
    </form>

</main>
{% endblock %}
