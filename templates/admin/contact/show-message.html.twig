{% extends "admin/base-admin.html.twig" %}

{% block title %}
    Message N°{{ message.id }}
    {{ parent() }}
{% endblock %}

    {% block main %}
        <main id="pricing_show">
            <a href="index.php?route=list-messages"><i class="fa-solid fa-arrow-left"></i></a>
            <h2 class="message">Devis N°{{ message.id }}</h2>

            <p>Prénom : {{ message.firstname }}</p>
            <p>Nom : {{ message.lastname }}</p>
            <p>Ville : {{ message.city }}</p>
            <p>Email : {{ message.email }}</p>
            <p>Message : {{ message.content }}</p>

            <ul class="edit_btns">
                <li><a href="index.php?route=delete-message&id={{ message.id }}"><i class="fa-solid fa-trash"></i></a></li>
            </ul>
            <a href="index.php?route=list-messages"><i class="fa-solid fa-arrow-left"></i></a>

        </main>
    {% endblock %}