{% extends "admin/base-admin.html.twig" %}

{% block title %}
    Prestation N°{{ service.id }}
    {{ parent() }}
{% endblock %}


    {% block main %}
        <main id="service_show">
            <a href="index.php?route=list-services"><i class="fa-solid fa-arrow-left"></i></a>
            <h2 class="service">Prestation N°{{ service.id }}</h2>

            <p>Titre : {{ service.title }}</p>
            <p>Description : {{ service.description }}</p>
            {% for picture in service.pictures %}
                <img class = "serciceImg " src="{{ picture.url }}" alt="{{ picture.alt }}" width="200px"/>
            {% endfor %}

            <ul class="edit_btns">
                <li><a href="index.php?route=delete-service&id={{ service.id }}"><i class="fa-solid fa-trash"></i></a></li>
            </ul>

            <a href="index.php?route=list-services"><i class="fa-solid fa-arrow-left"></i></a>


        </main>
    {% endblock %}