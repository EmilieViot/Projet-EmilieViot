{% extends "admin/base-admin.html.twig" %}

{% block title %}
    Connexion
    {{ parent() }}
{% endblock %}

{% block main %}
    <main id="loginPage" class="container py-5 px-3">

    {% if app.session.get('error-message') is defined %}
        {{ message }}
    {% endif %}

    <h1 class="mb-5">Connexion</h1>

    <form class="loginForm" action="index.php?route=loginCheck" method="post">
        <input type="hidden" name="csrf-token" id="csrf-token" value="{{ sessionToken }}">

        <fieldset class="my-1">
            <label for="email" class="form-label">
                Email
            </label>
            <input type="email" name="email" id="email" class="form-control"/>
        </fieldset>

        <fieldset class="my-1">
            <label for="password" class="form-label">
                Password
            </label>
            <input type="password" name="password" id="password" class="form-control" />
        </fieldset>

        <fieldset>
            <button type="submit" class="btn btn-primary">Login</button>
        </fieldset>

    </form>

</main>
{% endblock %}