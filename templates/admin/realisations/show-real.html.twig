{% extends "admin/base-admin.html.twig" %}

{% block title %}
    Réalisation N°{{ realisation.id }}
    {{ parent() }}
{% endblock %}


    {% block main %}
        <main id="realisation_show">
            <a href="index.php?route=list-reals"><i class="fa-solid fa-arrow-left"></i></a>
            <h2 class="realisation">Réalisation N°{{ realisation.id }}</h2>

            <p>Titre : {{ realisation.title }}</p>
            <p>Description : {{ realisation.description }}</p>
            {% for picture in realisation.pictures %}
                <img class = "realImg " src="{{ picture.url }}" alt="{{ picture.alt }}" width="200px"/>
            {% endfor %}


            <ul class="edit_btns">
                <li><a href="index.php?route=delete-realisation&id={{ realisation.id }}"><i class="fa-solid fa-trash"></i></a></li>
            </ul>

            <a href="index.php?route=list-messages"><i class="fa-solid fa-arrow-left"></i></a>


        </main>
    {% endblock %}